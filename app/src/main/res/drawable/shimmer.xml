<?xml version="1.0" encoding="utf-8"?>
<animated-gradient xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gradient"
    android:type="linear"
    android:gradientRadius="0"
    android:angle="0"
    android:startColor="#DDDDDD"
    android:centerColor="#EEEEEE"
    android:endColor="#DDDDDD">
    <item android:duration="800">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#DDDDDD"
                android:centerColor="#EEEEEE"
                android:endColor="#DDDDDD"
                android:type="linear"
                android:angle="0"
                android:gradientRadius="0"
                android:startX="0"
                android:endX="1">
            </gradient>
        </shape>
    </item>

    <item android:duration="800" android:startOffset="200">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#DDDDDD"
                android:centerColor="#F5F5F5"
                android:endColor="#DDDDDD"
                android:type="linear"
                android:angle="0"
                android:gradientRadius="0"
                android:startX="0"
                android:endX="1">
            </gradient>
        </shape>
    </item>

    <item android:duration="800" android:startOffset="400">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#DDDDDD"
                android:centerColor="#EEEEEE"
                android:endColor="#DDDDDD"
                android:type="linear"
                android:angle="0"
                android:gradientRadius="0"
                android:startX="0"
                android:endX="1">
            </gradient>
        </shape>
    </item>

</animated-gradient>