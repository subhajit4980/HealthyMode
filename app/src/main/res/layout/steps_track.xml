<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".All_View.Steps_Track">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content"
                android:visibility="gone"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Track Your Daily Steps"
                        tools:ignore="HardcodedText,MissingConstraints"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            app:boxStrokeColor="@color/dark_grey"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusTopEnd="21dp"
                            app:boxCornerRadiusBottomEnd="21dp"
                            app:boxCornerRadiusBottomStart="21dp"
                            app:boxCornerRadiusTopStart="21dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            >
                            <AutoCompleteTextView
                                android:id="@+id/year"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:inputType="none"
                                android:textSize="17dp"
                                android:text="Select Year"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            app:boxStrokeColor="@color/dark_grey"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusTopEnd="21dp"
                            app:boxCornerRadiusBottomEnd="21dp"
                            app:boxCornerRadiusBottomStart="21dp"
                            app:boxCornerRadiusTopStart="21dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            >
                            <AutoCompleteTextView
                                android:id="@+id/month"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="none"
                                android:textSize="17dp"
                                android:text="Select Month"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/stepchart"
                        android:layout_width="match_parent"
                        android:background="@color/transparent"
                        android:layout_height="250dp"
                        android:layout_marginTop="10dp"
                        tools:ignore="MissingConstraints" />


                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/targetlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="40dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/chart">
                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/chart"
                        tools:ignore="UselessLeaf">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set Target :"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"
                            android:textSize="20sp" />
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            app:boxStrokeColor="@color/dark_grey"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            >
                            <AutoCompleteTextView
                                android:id="@+id/target"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:inputType="none"
                                android:textSize="20sp"
                                android:text="Select Target"
                                tools:ignore="LabelFor" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/targetlayout">
                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/chart"
                        tools:ignore="UselessLeaf">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="Highest Steps Record"
                            android:textColor="@color/black"
                            android:fontFamily="@font/alata"
                            android:textSize="20sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Steps :"
                                android:textColor="@color/black"
                                android:layout_marginStart="5dp"
                                android:textSize="20sp" />
                            <TextView
                                android:id="@+id/step"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:textColor="@color/black"
                                android:layout_marginStart="5dp"
                                android:textSize="20sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date :"
                                android:textColor="@color/black"
                                android:layout_marginStart="5dp"
                                android:textSize="20sp" />
                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2000/10/10"
                                android:textColor="@color/black"
                                android:layout_marginStart="5dp"
                                android:textSize="20sp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:progressTint="@color/black"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
