                                    app:layout_constraintEnd_toStartOf="@id/glass"
                                    app:layout_constraintStart_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:ignore="UnusedAttribute" />

