                                        android:id="@+id/calorie"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginRight="5dp"
                                        android:text="111"
                                        android:textSize="20sp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="2dp"
                                        android:textSize="20sp"
                                        android:text="of" />
