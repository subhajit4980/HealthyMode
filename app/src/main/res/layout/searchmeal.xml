    <TextView
        android:id="@+id/ER"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="No data !"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_gravity="center"
